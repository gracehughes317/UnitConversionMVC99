﻿<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UnitConversionMVC99</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/OverallStyle.css" />
    </environment>

</head>
<body>
    <div class="top row georgia">
        <div class="col-md-12">
            <p class="one Calibri">Unit</p>
            <hr>
            <p class="two Calibri">Converter</p>
        </div>
